<!DOCTYPE html>
<html lang="en">
<head>
      <%- include('pages/head'); %>    
</head>
<body>
    <section>
      <%- include('pages/header'); %> 
    </section>
    <!-- Auth message -->
    <% if (typeof message !== 'undefined') { %>
      <div class="text-white text-center h2 p-3 bg-warning">
        <%= message %>
      </div>
    <% } %>

    <section class="vh-100" style="background-color: rgb(172, 191, 173);">
        <div class="container h-100">
        
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
              <div class="card text-black" style="border-radius: 25px;">
                <div class="card-body p-md-5">
                  <div class="row justify-content-center">
                    <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
      
                      <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Login as an Admin</p>
      
                      <form class="mx-1 mx-md-4" action="/admin-login" method="POST">
      
                        <div class="d-flex flex-row align-items-center mb-4">
                          <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                          <div class="form-outline flex-fill mb-0">
                            <input type="email" id="form3Example3c" name="email" class="form-control" />
                            <label class="form-label" for="form3Example3c">Your Email</label>
                          </div>
                        </div>
      
                        <div class="d-flex flex-row align-items-center mb-4">
                          <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                          <div class="form-outline flex-fill mb-0">
                            <input type="password" name="password" id="form3Example4c" class="form-control" />
                            <label class="form-label" for="form3Example4c">Password</label>
                          </div>
                        </div>
      
                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                          <button type="submit" class="btn btn-primary btn-lg">Login</button>
                        </div>
      
                      </form>
      
                    </div>
                    <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2 width=80%">
      
                       <img src="https://img.freepik.com/premium-vector/livestock-animals-farm-logo-design-template_513585-106.jpg?w=2000"
                        class="img-fluid" alt="Sample image"> 
      
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <%- include('pages/footer'); %>
</body>
</html>