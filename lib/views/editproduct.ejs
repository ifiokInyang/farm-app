<body>
    <header>
    <%- include('pages/back-navbar'); %>
    
<div class="container p-5 text-center">
    <h1>Edit Product</h1>
</div>

<div class="container">
    <a href="/dashboard" class="btn btn-sm btn-primary float-end">View Products</a>

    <form action="/product/<%= product.id %>?_method=PUT" method="POST" enctype="multipart/form-data" style="width: 50%; margin:0 auto">
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Product name</label>
            <input type="text" name="name" value="<%= product.name %>" class="form-control" id="exampleFormControlInput1">
        </div>
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Product Category</label>
            <input type="text" name="category" value="<%= product.category %>" class="form-control" id="exampleFormControlInput1">
        </div>
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Farm Product Quantity</label>
            <input type="text" name="quantity" value="<%= product.quantity %>"  class="form-control" id="exampleFormControlInput1">
        </div>
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Price</label>
            <input type="text" name="price" value="<%= product.price %>" class="form-control" id="exampleFormControlInput1">
        </div>
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Farm Product Description</label>
            <input type="text" name="description" value="<%= product.description %>" class="form-control" id="exampleFormControlInput1">
        </div>
       
<!-- image -->
