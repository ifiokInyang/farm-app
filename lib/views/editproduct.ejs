        </div> -->
<!-- create button -->
        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
            <button type="submit" class="btn btn-primary btn-lg">Edit Product</button>
        </div>
    </form>
  
    
</div>

